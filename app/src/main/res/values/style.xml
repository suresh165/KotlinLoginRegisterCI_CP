<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/teal_200</item>
        <item name="colorAccent">@color/teal_200</item>

    </style>
    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint" tools:ignore="NewApi"
            tools:targetApi="lollipop">@color/white</item>
    </style>

    <style name="button_sign_up">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="editText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/btn_stroke_background</item>
        <item name="android:paddingLeft">@dimen/s10</item>
        <item name="android:paddingTop">@dimen/S5</item>
        <item name="android:paddingRight">@dimen/s10</item>
        <item name="android:paddingBottom">@dimen/S5</item>
        <item name="android:layout_height">50dp</item>

    </style>
    <style name="hintTextView">
        <item name="android:textSize">@dimen/s14</item>
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/s20</item>
    </style>
</resources>